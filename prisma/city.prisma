model City {
  id        String   @id @default(cuid())
  name      String   @unique
  region    String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users    User[]
  services ServiceCity[] // Связь с услугами через промежуточную таблицу

  @@index([name])
  @@map("cities")
}

