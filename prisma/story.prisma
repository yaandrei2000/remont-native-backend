model Story {
  id        String   @id @default(cuid())
  title     String
  image     String? // Изображение для превью карточки
  isActive  Boolean  @default(true)
  order     Int      @default(0) // Порядок отображения
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  images StoryImage[]

  @@index([isActive])
  @@index([order])
  @@map("stories")
}

model StoryImage {
  id        String   @id @default(cuid())
  storyId   String
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  image     String // URL изображения
  title     String? // Заголовок на изображении
  duration  Int      @default(15000) // Длительность показа в миллисекундах
  order     Int      @default(0) // Порядок отображения
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storyId])
  @@index([order])
  @@map("story_images")
}

